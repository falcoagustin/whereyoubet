@import 'colors';

html {
  font-family: 'Ubuntu', sans-serif;
  height: 100%;
  width: 100%;
}

body {
  //background-image: url(<%= asset_path 'goal-blur.jpg' %>); //scss-lint:disable Error
  background-repeat: no-repeat;
  background-size: cover;
  display: block;
  font-family: 'Ubuntu', sans-serif !important; //scss-lint:disable ImportantRule
}

.bm-input {
  display: block;
  font-size: 17px;
  height: 35px;
  margin-left: 12%;
  width: 75%;
}

.bm-label {
  display: block;
  text-align: center;
}

.bm-title {
  font-family: Copperplate, "Copperplate Gothic Light";
  margin-bottom: 10px;
  text-align: center;
}

.dropdown {
  display: inline-block;
  position: relative;
  z-index: 999;
}

.dropdown-content {
  background-color: $lighter-white;
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, .2);
  display: none;
  min-width: 160px;
  position: absolute;
  right: 5px;
  text-align: left;
}

.dropdown:hover .dropdown-content {
  display: block;
}

.dropdown-item {
  background-color: rgba(5, 5, 5, .8);
  color: $white;
  display: block;
  height: 100%;
  padding: 8%;
  cursor: pointer;
  &:hover {
    background-color: $grey;
  }
}

.dropdown-separator {
  color: $white;
  border-top: .5px solid;

}

.model-panel {
   position: absolute;
   display: flex;
   left: 15%;
   top: 11%;
   background-color: $grey;
   width: 70%;
   box-shadow: 6px 6px 25px -1px rgba(0,0,0,0.75);
 }

.model-create {
  display: inline-block;
  width: 25%;
  text-align: center;
}

.model-container {
  display: inline-block;
  width: 73%;
}

.model-row {
  display: flex;
  label {
    font-size: 17px;
  }
  &:hover {
    background-color: #F2F2F2;
  }
}

.model-header-container {
  margin-bottom: 2%;
  padding-left: 0;
  border-bottom: 1px solid #ddd;
  list-style: none;
  position:relative;
  display: flex;
}

.cell-large {
  width: 33%;
}

.cell-small {
  width: 17%;
}

.cell-tiny {
  width: 10%;
}

.header {
  display: inline-block;
}

.bm-button {
  background-color: black;
  color: white;
  border-radius: 4px;
  font-family: Copperplate, "Copperplate Gothic Light";
}

.upload-file {
  padding: 4%;
}

.bm-panel {
  background: $grey;
  display: flex;
  width: 75%;
  box-shadow: 6px 6px 25px -1px rgba(0,0,0,0.75);
  margin: 0 auto;
  margin-top: 75px;

  padding: 2%;
}

.error {
  color: red;
}

.footer {
  margin-top: 30px;
  display: block;
  background-color: rgba(5, 5, 5, 1);
  width: 100%;
  height: 100px;
  color: $white;
}

.clickable {
  cursor: pointer;
}
