<div class="model-container">
  <h3 class="bm-title"> All Teams </h3>
  <ul class="model-header-container">
    <li class="header cell-large"> Name </li>
    <li class="header cell-small"> Country </li>
    <li class="header cell-small"></li>
  </ul>
  <% @teams.each do |team| %>
    <div class="model-row">
      <label class="cell-large"> <%= team.name %> </label>
      <label class="cell-small"> <%= team.country_id %> </label>
      <a data-confirm="Are you sure?"
         rel="nofollow"
         data-method="delete"
         href="/teams/<%=team.id%>"><span class="cell-tiny glyphicon glyphicon-trash"></span></a>
      <!-- <span class="glyphicon glyphicon-trash"> </span> -->
    </div>
  <% end %>
</div>
