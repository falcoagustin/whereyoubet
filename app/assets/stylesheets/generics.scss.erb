@import "colors";

html {
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
  height:100%;
  width: 100%;
}

body {
  height: 100%;
  background-image: url(<%= asset_path 'goal-blur.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
  // background: linear-gradient(90deg, #666699, rgba(#165998, 0.92));
}

.bm-input{
  display: block;
  margin-left: 12%;
  font-size: 17px;
  width: 75%;
  height: 35px;
}

.bm-label {
  text-align: center;
  display: block;
}

.bm-title {
  margin-bottom: 10px;
  text-align: center;
  font-family: Copperplate, "Copperplate Gothic Light";
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
    right: 20px;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    text-align: left;
}

.dropdown-item {
  display: block;
  height: 100%;
  padding: 8%;
  cursor: pointer;
  &:hover {
    background-color: $grey;
  }
}

.model-panel {
   position: absolute;
   display: flex;
   left: 15%;
   top: 17%;
   background-color: $grey;
   width: 70%;
   box-shadow: 6px 6px 25px -1px rgba(0,0,0,0.75);
 }

.model-create {
  display: inline-block;
  width: 25%;
  text-align: center;
}

.model-container {
  display: inline-block;
  width: 73%;
}

.model-row {
  display: flex;
  label {
    font-size: 17px;
  }
  &:hover {
    background-color: #F2F2F2;
  }
}

.model-header-container {
  margin-bottom: 2%;
  padding-left: 0;
  border-bottom: 1px solid #ddd;
  list-style: none;
  position:relative;
  display: flex;
}

.cell-large {
  width: 33%;
}

.cell-small {
  width: 17%;
}

.cell-tiny {
  width: 10%;
}

.header {
  display: inline-block;
}

.bm-button {
  background-color: black;
  color: white;
  border-radius: 4px;
  font-family: Copperplate, "Copperplate Gothic Light";
}

.upload-file {
  padding: 4%;
}

.bm-panel {
  background: $grey;
  width: 85%;
  box-shadow: 6px 6px 25px -1px rgba(0,0,0,0.75);
  margin: 0 auto;
  padding: 2%;
}
