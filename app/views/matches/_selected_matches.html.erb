<div class="user-bet-container cart-resize">
  <span class="glyphicon glyphicon-shopping-cart cart" onclick="showBuys()" ></span>
  <div id="buyContainer" hidden>
    <span class="glyphicon glyphicon-chevron-down hide-down" onclick="hideBuys()"></span>
    <%= form_tag("/complete_bets", method: "post", id: "completeBetForm", :class => 'complete-bet-form') do %>
      <h1> Your bet! </h1>
      <input type="number" name="completeBet[amount]"/>
      <button type="submit" class="bm-button"> Bet ! </button>
    <% end %>
  </div>
</div>
