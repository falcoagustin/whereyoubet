<div class="bm-panel">
  <div class="best-five-bets">
    <h1> Bet history </h1>
    <div class="best-five-content">
      <div class="best-five-header">
        <ul>
          <li><label> Time </label></li>
          <li class="cell-tiny"><label> Local Rate </label></li>
          <li class="cell-tiny"><label> Visitor Rate </label></li>
          <li class="cell-tiny"><label> Tie Rate </label></li>
          <li class="medium-row"><label> Match </label></li>
          <li><label> Amount </label></li>
          <li class="cell-tiny"><label> Your Bet </label></li>
        </ul>
      </div>
      <% @bets.each do |bet| %>
        <div class="best-five-row">
          <div><span> <%= bet.executed %> </span></div>
          <div class="cell-tiny"><span> <%= bet.match.local_ratio %> </span></div>
          <div class="cell-tiny"><span> <%= bet.match.visitor_ratio %> </span></div>
          <div class="cell-tiny"><span> <%= bet.match.tie_ratio %> </span></div>
          <div class="medium-row">
            <span> <%= bet.match.local_team.name %> </span>
            <label> vs </label>
            <span> <%= bet.match.visitor_team.name %> </span>
          </div>
          <div><span> <%= bet.amount %></span></div>
          <% if bet.bet_on_local %> <div class="cell-tiny"><span> Local </span></div> <% end %>
          <% if bet.bet_on_visitor %> <div class="cell-tiny"><span> Visitor </span></div> <% end %>
          <% if bet.bet_on_tie %> <div class="cell-tiny"><span> Tie </span></div> <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
